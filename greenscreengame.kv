#: import RiseInTransition kivy.uix.screenmanager.RiseInTransition

# CreditsWidget:

<WindowManager>:
    transition: RiseInTransition()
    HomeScreen:
    GameScreen:
    DiffScreen:
    InstructionsScreen:
    CreditsScreen:

<HomeScreen>:
    name: 'home'
    HomeWidget:

<GameScreen>:
    name: 'game'
    GameWidget:

<DiffScreen>:
    name: 'diff'
    DiffWidget:

<InstructionsScreen>:
    name: 'instructions'
    InstructionsWidget:

<CreditsScreen>:
    name: 'credits'
    CreditsWidget:

<CreditsWidget>:
    canvas:
        Rectangle:
            size: self.size
            source: "Images/Home_Background.png"
    orientation: 'vertical'
    RoundedButton:
        size_hint: .2, .15
        text: 'Back'
        on_release: app.root.current = "home"
    Label:
        font_name: "fonts/FSEX300.ttf"
        font_size: 50
        color: (135/255, 91/255, 36/255)
        outline_color: 0,0,0
        outline_width: 5
        size_hint: 1,.3
        text: 'CREDITS'
    Label:
        id: diff
        color: (1,1,1)
        outline_color: 0,0,0
        outline_width: 2
        size_hint: 1,.2
        font_name: "fonts/FSEX300.ttf"
        font_size: 20
        text_size: self.size
        text: 'Credits go to Vish             Check out my GitHub:              Check out my LinkedIn:             Check out my Website:'
    Widget:


<InstructionsWidget>:
    canvas:
        Rectangle:
            size: self.size
            source: "Images/Home_Background.png"
    orientation: 'vertical'
    RoundedButton:
        size_hint: .2, .3
        text: 'Back'
        on_release: app.root.current = "home"
    Label:
        font_name: "fonts/FSEX300.ttf"
        font_size: 50
        color: (135/255, 91/255, 36/255)
        outline_color: 0,0,0
        outline_width: 5
        size_hint: 1,.3
        text: 'INSTRUCTIONS'
    Label:
        id: diff
        color: (1,1,1)
        outline_color: 0,0,0
        outline_width: 2
        size_hint: 1,.2
        font_name: "fonts/FSEX300.ttf"
        font_size: 20
        text: 'HOW TO PLAY:'
    Label:
        id: diff
        color: (1,1,1)
        outline_color: 0,0,0
        outline_width: 2
        size_hint: 1,.6
        font_name: "fonts/FSEX300.ttf"
        font_size: 15
        text_size: self.size
        text: '     The goal of the game is to turn all of the tiles green. This can be achieved by pressing on the tiles to flip the colors. However, when a tile is pressed, the tile pressed and the adjacent tiles (every tile that shares an edge) will change colors:'
    Image:
        source: 'Images/Instructions.png'
        size_hint: 1, 1
    Widget:

<DiffWidget>:
    spacing: "10dp"
    canvas:
        Rectangle:
            size: self.size
            source: "Images/Home_Background.png"
    orientation: 'vertical'
    RoundedButton:
        size_hint: .2, .1
        text: 'Back'
        on_release: app.root.current = "home"
    Label:
        color: (135/255, 91/255, 36/255)
        outline_color: 0,0,0
        outline_width: 5
        size_hint: 1,.1
        font_name: "fonts/FSEX300.ttf"  
        font_size: 65
        text: 'DIFFICULTY'
    Label:
        id: diff
        color: (1,1,1)
        outline_color: 0,0,0
        outline_width: 2
        size_hint: 1,.1
        font_name: "fonts/FSEX300.ttf"  
        font_size: 20
        text: 'Selected Difficulty: BABY'
    AnchorLayout:
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            RoundedButton:
                #Baby mode
                outline_color: 0,0,0
                outline_width: 2.5
                font_name: "fonts/FSEX300.ttf"  
                font_size: "30dp"
                text: "BABY"
                size_hint: .7, 0.8
                pos_hint: {'x':.15}
                on_release: root.baby_mode()
            RoundedButton:
                # Easy
                outline_color: 0,0,0
                outline_width: 2.5
                font_name: "fonts/FSEX300.ttf"  
                font_size: "30dp"
                text: "EASY"
                size_hint: .7, 0.8
                pos_hint: {'x':.15}
                on_release: root.easy_mode()
            RoundedButton:
                #Medium
                outline_color: 0,0,0
                outline_width: 2.5
                font_name: "fonts/FSEX300.ttf"  
                font_size: "30dp"
                text: "MEDIUM"
                size_hint: .7, 0.8
                pos_hint: {'x':.15}
                on_release: root.medium_mode()
            RoundedButton:
                #Hard
                outline_color: 0,0,0
                outline_width: 2.5
                font_name: "fonts/FSEX300.ttf"  
                font_size: "30dp"
                text: "HARD"
                size_hint: .7, 0.8
                pos_hint: {'x':.15}
                on_release: root.hard_mode()
            RoundedButton:
                #Insane
                outline_color: 0,0,0
                outline_width: 2.5
                font_name: "fonts/FSEX300.ttf"  
                font_size: "30dp"
                text: "INSANE"
                size_hint: .7, 0.8
                pos_hint: {'x':.15}
                on_release: root.insane_mode()
            Label:
                id: diff_description
                color: (1,1,1)
                outline_color: 0,0,0
                outline_width: 1
                size_hint: 1, .4
                font_name: "fonts/FSEX300.ttf"  
                font_size: 15
                text_size: self.size
                text: 'INSANE: 7 clicks to beat the game. Recommended only for the best of the best.'


<HomeWidget>:
    canvas:
        Rectangle:
            size: self.size
            source: "Images/Home_Background.png"
    orientation: 'vertical'
    Label:
        color: (13/255, 111/255, 209/255)
        outline_color: 0,0,0
        outline_width: 5
        size_hint: 1,.1
        font_name: "fonts/FSEX300.ttf"  
        font_size: 80
        text: 'TILE    '
    Label:
        color: (0.02, 0.6, 0.2)
        outline_color: 0,0,0
        outline_width: 5
        size_hint: 1,.1
        font_name: "fonts/FSEX300.ttf"  
        font_size: 80
        text: '    FLIP'
    AnchorLayout:
        size_hint: 1,.2
        anchor_x: 'center'
        anchor_y: 'center'
        Image:
            size_hint: .6,.6
            source: "Images/Logo.png.png"
    AnchorLayout:
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            RoundedButton:
                # id: play
            #Play
                outline_color: 0,0,0
                outline_width: 2.5
                font_name: "fonts/FSEX300.ttf"  
                font_size: "30dp"
                text: "PLAY"
                size_hint: .7, 1
                pos_hint: {'x':.15}
                #on_press: root.button_release_play()
                on_release: app.root.current = "game"
            RoundedButton:
                # id: difficulty
            #Difficulty
                outline_color: 0,0,0
                outline_width: 2.5
                font_name: "fonts/FSEX300.ttf"  
                font_size: "30dp"
                text: "DIFFICULTY"
                size_hint: .7, 1
                pos_hint: {'x':.15}
                on_release: app.root.current = "diff"
            RoundedButton:
                # id: instructions
            #How to play
                outline_color: 0,0,0
                outline_width: 2.5
                font_name: "fonts/FSEX300.ttf"  
                font_size: "30dp"
                text: "INSTRUCTIONS"
                size_hint: .7, 1
                pos_hint: {'x':.15}
                on_release: app.root.current = "instructions"
            RoundedButton:
                # id: credit
            #Credits
                outline_color: 0,0,0
                outline_width: 2.5
                font_name: "fonts/FSEX300.ttf"  
                font_size: "30dp"
                text: "CREDITS"
                size_hint: .7, 1
                pos_hint: {'x':.15}
                on_release: app.root.current = "credits"
            Widget:


<GameWidget>:    
    canvas.before:
        Rectangle:
            size: self.size
            source: "Images/Game_Background.png"
    # Button:
    # Label:
    # Button:

<RoundedButton@Button>:
    background_normal: ''
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgb: (0,0,0)
        RoundedRectangle:
            size: self.width+4, self.height+4
            pos: self.x-2, self.y-2
            radius: [20]
        Color:
            rgb: 135/255, 91/255, 36/255
        RoundedRectangle:
            size: (self.width), (self.height)
            pos: self.pos
            radius: [20]
        